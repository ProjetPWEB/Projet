<%= form_for(@cocktail) do |f| %>
  <% if @cocktail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cocktail.errors.count, "error") %> prohibited this cocktail from being saved:</h2>

      <ul>
      <% @cocktail.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, :size => "30x10" %>
  </div>
  <div class="field">
    <%= f.label :rating %><br>
    <%= f.number_field :rating,  :min => 0, :max => 20, :value =>10 %>
  </div>
  <div class="field">
  <%= f.label :component %><br>
  <table> 
    <tr>
    <td colspan="2">
    <%= select_tag :ingredient, options_for_select(Ingredient.all.map {|i| [i.name, i.id]}) %>
    </td>
    <td>
    <input type="number" id="quantity" min="0">
    </td>
    </td>
    <td> 
     <button type="button" id="btn_add">Ajouter Ingrédient</button>
    </td>
    </tr>
    <tr>
    <td colspan="3">
    <fieldset>
      <select id="components" multiple="multiple">
      </select>
    </fieldset>
    </td>
    <td>
    <button type="button" id="btn_rm">Enlever Ingrédient</button>
    </td>
    </table>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

  <a href="/ingredients/new">Vous voulez ajouter un ingrédient qui n'est pas dans la base de données ? Cliquez ici </a>
<% end %>


<script>
  var components = document.getElementById('components');
  var btn_add = document.getElementById('btn_add');
  var btn_rm = document.getElementById('btn_rm');
  var ingredient = document.getElementById('ingredient');
  var quantity = document.getElementById('quantity');
  btn_add.onclick=function(){fun_add()};
  btn_rm.onclick=function(){fun_rm()};

function fun_add(){
  for(var i = ingredient.options.length-1; i>=0; i--){
    if (ingredient.options[i].selected){
      var res = [ingredient.options[i].innerHTML,quantity.value];
      var opt = document.createElement('option');
      opt.innerHTML = res;
      opt.value = res;
      if(dans_liste(ingredient.options[i].innerHTML)){
        components.appendChild(opt);  
      } 
      else{
         alert("Cet ingrédient est déjà dans la liste");
      }
    }
  }
}
function fun_rm(){
  components.remove(components.selectedIndex)
}
function dans_liste(ingr){
  var res = true;
  for(var i = 0; i<components.options.length;i++){
    if(components.options[i].innerHTML.split(",")[0]==ingr){
     
      res =  false;
    }
    else {
      res = res && true;
    }
  }
  return res
}
</script>
