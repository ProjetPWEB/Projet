        <li><a href="/cocktails">Recettes</a></li>
      </ul>
      <%- if user_signed_in? %>
      <ul class="nav navbar-nav">
        <li><a href="/bars">Mon Bar</a></li>
        <li><a href="/cocktails/new">Proposer une recette</a></li>
        
      </ul>
      <ul class="nav navbar-nav navbar-right">
      		 <div>Connecté en tant que <%= current_user.email %></div>
      		 <%= link_to "Se déconnecter", destroy_user_session_path, :method => :delete %>
      		 
      </ul>

      <%- else %>
      <ul class="nav navbar-nav navbar-right">
