       <a href="/users/sign_up"> <button type="button" class="btn btn-default navbar-btn"> S'inscrire </button></a>
      </ul>
      <%- end %>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="align"><span id="notice" class="label label-danger"><%= notice %></span></div>

<%= yield %>

</body>
