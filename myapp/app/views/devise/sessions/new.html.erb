<div class="row">
<div class="col-lg-3"></div>
<div class="col-lg-6">

<div class="align"><h3><span class="label label-primary">Se connecter</span></h3></div></br>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

	<div class="input-group">
		<span class="input-group-addon">@</span>
		<%= f.input_field :email, :required => false, :autofocus => true %>
	</div></br>
	<div class="input-group">
		<span class="input-group-addon">Mot de Passe</span>
		<%= f.input_field :password, :required => false %>
	</div></br>
	
	<div class="row">
	<div class="col-lg-4"></div>
	<div class="col-lg-4">
		<div class="input-group">
			<ul class="list-group">
				<li class="list-group-item">
					<div class="row">
						<div class="col-lg-2">
							<%= f.input_field :remember_me, :as => :boolean if devise_mapping.rememberable? %>
						</div>
						<div id="span-remember" class="col-lg-10">
							<span class="label label-primary">Se souvenir de moi</span>
						</div>
					</div>
				</li>
			</ul>
		</div>
	</div>
	<div class="col-lg-4"></div>
	</div>

	<div class="form-actions">
		<%= f.submit :class=>"btn btn-default btn-submit", :id=>"submit-account-button" %>
	</div>
  
<% end %>

</div>
<div class="col-lg-3"></div>
</div>

<script>
	$('#submit-account-button').attr('value', "Connexion");
	$('#user_email').attr('class', "form-control");
	$('#user_password').attr('class', "form-control");
	$('#span-remember').attr('style', "padding-top:5%");
</script>
