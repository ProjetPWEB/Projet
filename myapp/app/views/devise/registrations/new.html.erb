<div class="row">
<div class="col-lg-3"></div>
<div class="col-lg-6">

<div class="align"><h3><span class="label label-primary">Créer un Compte</span></h3></div></br>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

	<div class="input-group">
		<span class="input-group-addon">@</span>
		<%= f.input_field :email, :required => true, placeholder:"Entrez votre adresse e-mail", :autofocus => true %>
	</div></br>
	<div class="input-group">
		<span class="input-group-addon">Mot de Passe</span>
		<%= f.input_field :password, :required => true, placeholder:"Saisissez votre mot de passe" %>
	</div></br>
	<div class="input-group">
		<span class="input-group-addon">Confirmation MdP</span>
		<%= f.input_field :password_confirmation, :required => true, placeholder:"Confirmez votre mot de passe" %>
	</div></br>

	<div class="form-actions">
		<%= f.submit :class=>"btn btn-default btn-submit", :id=>"submit-account-button" %>
	</div>
  
<% end %>

</div>
<div class="col-lg-3"></div>
</div>

<script>
	$('#submit-account-button').attr('value', "Créer mon compte");
	$('#user_email').attr('class', "form-control");
	$('#user_password').attr('class', "form-control");
	$('#user_password_confirmation').attr('class', "form-control");
</script>
